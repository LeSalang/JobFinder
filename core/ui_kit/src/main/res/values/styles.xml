<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Font Styles -->
    <style name="BaseFontStyle">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <!-- Title Styles -->
    <style name="Title1" parent="BaseFontStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_sembold</item>
    </style>

    <style name="Title2" parent="BaseFontStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_sembold</item>
    </style>

    <style name="Title3" parent="BaseFontStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="Title4" parent="BaseFontStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <!-- Text Styles -->
    <style name="Text1" parent="BaseFontStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <!-- Button Text Styles -->
    <style name="ButtonText1" parent="BaseFontStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_sembold</item>
    </style>

    <style name="ButtonText2" parent="BaseFontStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TabText" parent="BaseFontStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <!-- Number Style -->
    <style name="NumberText" parent="BaseFontStyle">
        <item name="android:textSize">7sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

</resources>

